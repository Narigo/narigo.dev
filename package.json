{
	"name": "narigo.dev",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm run build:page && pnpm run build:talks",
		"build:page": "vite build",
		"build:talks": "pnpm --filter \"./talks/*\" build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --check --plugin prettier-plugin-svelte . && eslint .",
		"format": "prettier --write --plugin prettier-plugin-svelte ."
	},
	"dependencies": {
		"reveal.js": "^5.1.0"
	},
	"devDependencies": {
		"@fontsource/annie-use-your-telescope": "^5.1.0",
		"@fontsource/gochi-hand": "^5.1.0",
		"@fontsource/permanent-marker": "^5.1.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/enhanced-img": "^0.4.1",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@tailwindcss/typography": "^0.5.15",
		"@types/eslint": "^9.6.1",
		"@types/reveal.js": "^5.0.4",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"highlight.js": "^11.10.0",
		"postcss": "^8.4.49",
		"prettier": "^3.4.1",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.5.2",
		"svelte-check": "^4.1.1",
		"svelte-highlight": "^7.7.0",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^3.4.16",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.17.0",
		"victormono": "^1.5.6",
		"vite": "^6.0.2",
		"vitest": "^2.1.8"
	},
	"packageManager": "pnpm@8.7.4",
	"type": "module"
}
