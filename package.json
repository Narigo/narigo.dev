{
	"name": "narigo.dev",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm run build:page && pnpm run build:talks && mkdir -p ./build/talks/webrtc-use-cases && cp -r ./talks/webrtc-use-cases/dist/. ./build/talks/webrtc-use-cases",
		"build:page": "vite build",
		"build:talks": "pnpm --filter \"./talks/*\" build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --check --plugin prettier-plugin-svelte . && eslint .",
		"format": "prettier --write --plugin prettier-plugin-svelte ."
	},
	"dependencies": {
		"reveal.js": "^5.1.0"
	},
	"devDependencies": {
		"@fontsource/annie-use-your-telescope": "^5.0.8",
		"@fontsource/gochi-hand": "^5.0.18",
		"@fontsource/permanent-marker": "^5.0.8",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/enhanced-img": "^0.2.0",
		"@sveltejs/kit": "^2.5.6",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@tailwindcss/typography": "^0.5.12",
		"@types/reveal.js": "^5.0.3",
		"@typescript-eslint/eslint-plugin": "^7.7.0",
		"@typescript-eslint/parser": "^7.7.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.37.0",
		"highlight.js": "^11.9.0",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"svelte": "^4.2.15",
		"svelte-check": "^3.6.9",
		"svelte-highlight": "^7.6.0",
		"svelte-preprocess": "^5.1.4",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"victormono": "^1.5.6",
		"vite": "^5.2.9",
		"vitest": "^1.5.0"
	},
	"packageManager": "pnpm@8.7.4",
	"type": "module"
}
